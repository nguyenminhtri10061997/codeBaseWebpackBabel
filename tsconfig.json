{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@commonFunc/*": ["src/commonFunc/*"],
      "@pages/*": ["src/pages/*"],
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "tmp",
    "temp",
    ".vscode",
    ".sass-cache",
  ],
}